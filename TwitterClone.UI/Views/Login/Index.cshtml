
@{
    ViewBag.Title = "Login";
}

<h2 class="text-center">Welcome to My Twitter Clone</h2>
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-left">Login</h5>
                    <form id="twitter-clone-login-form">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="email" class="form-control" id="username" placeholder="email@example.com">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>
                    <a class="padding-top15" href="@Url.Action("Index","User")">New User? Sign up</a>
                </div>
            </div>
        </div>
    </div>
</div>
