
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Login";
}
<h2 class="text-center pt-3">Welcome to My Twitter Clone</h2>
@if(!string.IsNullOrEmpty(ViewBag.Message))
{
    <div id="message-header" class="alert alert-danger">@ViewBag.Message</div>
}
<div id="page-container" class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
            <div class="card-body">
                <h5 class="card-title text-left">Login</h5>
                @using (Html.BeginForm("SignIn", "Login", FormMethod.Post, new { @id = "twitter-clone-login-form" }))
                {
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" class="form-control" id="username" name="userid" required maxlength="25" placeholder="username"  value="">
                    </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="pwd" required placeholder="password"  maxlength="16" value="">
                        </div>
                        <button id="loginBtn" type="submit" class="btn btn-info">Login</button>
                }
                <a class="pr-2" href="@Url.Action("SignUp", "Admin")">New User?  Sign up</a>
            </div>
        </div>
    </div>
</div>


